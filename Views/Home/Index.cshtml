@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        padding: 20px 40px;
        color: #333;
        font-size: 14px;
    }

    select {
        padding: 9px 19px;
        background: #fafafa;
        border: 1px solid #ccc;
        font-size: 18px;
    }

    table {
        width: 700px;
        margin-top: 20px;
    }

        table th, table td {
            padding: 13px 20px;
        }

        table thead tr {
            background: #fcfcfc;
            border-bottom: 1px solid #ccc;
        }

        table tbody tr {
            border-top: 1px solid #f2f2f2;
        }
</style>

<app id="root"></app>

@section scripts {
    <script src="~/js/app.js" asp-append-version="true"></script>
}
